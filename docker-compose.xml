version: '3.8'

services:
  # ML infrastructure service model serving
  ml-server:
    build: .
    ports:
      - "8080:8080"
      - "8081:8081"
    depends_on:
      - minio
    environment:
      - S3_ENDPOINT=http://minio:9000
      - S3_ACCESS_KEY=minioadmin
      - S3_SECRET_KEY=minioadmin

  # MinIO simulating S3 storage
  minio:
    image: minio/minio
    ports:
      - "9000:9000"
      - "9001:9001"
    environment:
      - MINIO_ROOT_USER=minioadmin
      - MINIO_ROOT_PASSWORD=minioadmin
    command: server /data --console-address ":9001"